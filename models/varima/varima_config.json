{
  "data_path": "../data/Weather_Data_1980_2024(hourly).csv",
  "models_dir": "../models",
  "target_variables": [
    "temperature",
    "relative_humidity",
    "wind_speed_10m (km/h)"
  ],
  "input_features": [
    "temperature",
    "relative_humidity",
    "dew_point",
    "wind_speed_10m (km/h)",
    "pressure_msl (hPa)",
    "cloud_cover (%)",
    "vapour_pressure_deficit (kPa)"
  ],
  "train_split": 0.8,
  "val_split": 0.1,
  "forecast_horizon": 72,
  "var_order": 24,
  "max_lags": 24,
  "normalize": true
}